{
  "extends": "@tsconfig/node14/tsconfig.json",

  "noImplicitAny": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@dataPath": ["./local_db"],
      "@action": ["./src/actions"],
      "@app": ["./src/app"],
      "@common": ["./src/common"],
      "@config": ["./src/configs"],
      "@interface": ["./src/interfaces"],
      "@route": ["./src/routes"]
    }
  },
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*",
    "./log/**/*",
    "./test/"
  ]
}
